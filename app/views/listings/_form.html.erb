<%= form_with scope: :listing, url: listings_path, local: true do |form| %>
    <div>
        <%= form.label :title %><br>
        <%= form.text_field :title %>
    </div>

    <div>
        <%= form.label :price %><br>
        <%= form.number_field :price %>
    </div>

     <div>
        <%= form.label :description %><br>
        <%= form.text_field :description %>
    </div>

    <div>
        <%= form.submit 'Submit' %>
    </div>
<% end %>